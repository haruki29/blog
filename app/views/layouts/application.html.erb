<!DOCTYPE html>
<html>
  <head>
    <title><%= @title%></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	  <div id='title'>
	  	<%= @title%>
	  </div>
	  <div id='links'>
	  	<%= link_to '主页', root_path%> / <%= link_to '博客', bloglist_index_path%> / <%= link_to '作品', works_index_path%> / <%= link_to '照片', picture_index_path%> / <%= link_to '关于我', aboutme_index_path%>
	  </div>
	  <div id='content'>
	  	<%= yield %>
  	  </div>
  </body>
</html>
